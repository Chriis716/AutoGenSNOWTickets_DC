<Controls:MetroWindow
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:loadin="clr-namespace:LoadingIndicators.WPF;assembly=LoadingIndicators.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                
        Title="Daily Checks ServiceNow Tickets"
        Height="700"
        Width="650"
        WindowStartupLocation="Manual" 
        ResizeMode="NoResize"
        WindowStyle="None"    
        GlowBrush="{DynamicResource AccentColorBrush}"       
        Topmost="False">  
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Cobalt.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseDark.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingWave.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingWave.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingThreeDots.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingFlipPlane.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingPulse.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingDoubleBounce.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Colors.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles.xaml"/>
				</ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>               
    <Border>
    <Border.Background>
        <ImageBrush ImageSource="Images\background-image.jpg"
                    Stretch="None"/>
    </Border.Background>
        <Border                   
            BorderThickness="2"
            Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
	<Grid>				
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
		<Border Grid.Row="0" HorizontalAlignment="Stretch" Background="#FFD3D3D3" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="10" Margin="10,20,20,5">
			<Label 
				Content="Step 1. Create WorkTicket"
				Foreground="Black"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="20"/>
			</Border>
        <StackPanel 
			Orientation="Vertical"
			Grid.Row="1"			
			HorizontalAlignment="Left" 
			VerticalAlignment="Center"
			Margin="10,10,0,0">
							
			<TextBlock
				Text="• Enter Site Information below"
				Foreground="LightGray"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="12"
				Margin="10,0,5,0"/>
			<TextBlock
				Text="• Click Ticket button to create the workticket"
				Foreground="LightGray"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="12"
				Margin="10,0,5,0"/>	
			<TextBlock
				Text="• From within WorkTicket, Enter the date, copy the WorkTicket Hyperlink at the top and click submit"
				TextWrapping="Wrap"
				Foreground="LightGray"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="12"
				Margin="10,0,5,0"/>	
			<TextBlock
				Text="NOTE: The WorkTicket hyperlink is used in step 2 for creating the WorkTask"
				Foreground="LightGray"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="12"
				Margin="10,10,5,0"/>					
			<StackPanel Orientation="Horizontal">
				<StackPanel Orientation="Vertical">
					<Label 
					Content="Three Letter Site Abbreviation"
					Foreground="LightGray"
					FontWeight="Medium"
					Margin="25,5,0,5"
					FontFamily="Montserrat"
					FontSize="14"/>
					<TextBox Name="XMLAddInstallFilePath"
						 FontSize="13"
						 FontWeight="Medium"
						 FontFamily="Montserrat"                            
						 Foreground="White"
						 CaretBrush="LightGray"
						 BorderBrush="DarkGray"
						 BorderThickness="0,0,0,2"
						 Width="200"
						 VerticalContentAlignment="Center"
						 Margin="25,5,0,5"
						 Padding="15,0,0,0">
						 <TextBox.Background>
							<ImageBrush ImageSource="Images\Searchfile.png"
									Stretch="None"
									AlignmentX="Left"/>
						</TextBox.Background>                                                   
					</TextBox>
					</StackPanel>
					
				<Button Name="XMLbtnSelectInstallFile"                          
					BorderThickness="0"
					Content="TICKET"
					Foreground="White"
					FontSize="12"
					FontFamily="Montserrat"                           
					Margin="10,0,0,0">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Background" Value="#462AD8"/>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#28AEED"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border Width="100" Height="40"
								CornerRadius="20"
								Background="{TemplateBinding Background}">
							<ContentPresenter VerticalAlignment="Center"
											  HorizontalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Button.Template>
			</Button>
			</StackPanel>
        </StackPanel>	
		<Border Grid.Row="2" HorizontalAlignment="Stretch" Background="#FFD3D3D3" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="10" Margin="10,35,20,5">
			<Label 
				Content="Step 2. Create WorkTask"
				Foreground="Black"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="20"/>
			</Border>
		<StackPanel 
			Orientation="Vertical"
			Grid.Row="3"
			HorizontalAlignment="Left"			
			VerticalAlignment="Center"
			Margin="10,10,0,0">	
				<TextBlock
				Text="• Enter WorkTicket Hyperlink below"
				Foreground="LightGray"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="12"
				Margin="10,0,5,0"/>
			<TextBlock
				Text="• Click Task button to create the WorkTask for each day"
				Foreground="LightGray"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="12"
				Margin="10,0,5,0"/>	
			<TextBlock
				Text="• From within each WorkTask, click submit. Omit the ones not needed"
				Foreground="LightGray"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="12"
				Margin="10,0,5,0"/>
			<TextBlock
				Text="NOTE: Delete the Worktask not needed"
				Foreground="LightGray"
            	FontWeight="Medium"
            	FontFamily="Montserrat"
				FontSize="12"
				Margin="10,10,5,0"/>				
				<TextBox Name="XMLEnterFQDNInfo"
					 FontSize="13"
					 FontWeight="Medium"
					 FontFamily="Montserrat"                            
					 Foreground="LightGray"
					 CaretBrush="LightGray"
					 BorderBrush="DarkGray"
					 BorderThickness="0,0,0,2"
					 HorizontalAlignment="Stretch"
					 TextWrapping="Wrap"
					 MinWidth="250"
					 VerticalContentAlignment="Center"
					 Margin="5,5,5,5"
					 Padding="15,0,10,0">
					 <TextBox.Background>
						<ImageBrush ImageSource="Images\key-icon.png"
								Stretch="None"
								AlignmentX="Left"/>
					</TextBox.Background>                                                   
				</TextBox>				
				<Button Name="StartButton"                          
					BorderThickness="0"
					Content="TASK"
					Foreground="White"
					FontSize="12"
					HorizontalAlignment="Right"
					FontFamily="Montserrat"                           
					Margin="10">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Background" Value="#462AD8"/>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#28AEED"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border Width="100" Height="40"
								CornerRadius="20"
								Background="{TemplateBinding Background}">
							<ContentPresenter VerticalAlignment="Center"
											  HorizontalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Button.Template>
			</Button>				
		</StackPanel>
		
		<Grid Grid.Row="4">		    			
		<Grid HorizontalAlignment="Center" VerticalAlignment="Center">	
		<StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,15,0,0">	
			<StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,0">	
				<!-- <Controls:ProgressRing Name="Deployment_Progressbar" IsActive="True" Margin="0,0,0,0"  Foreground="White" Width="50"/> -->
				<loadin:LoadingIndicator Margin="0,5,0,0" Name="Wave" SpeedRatio="5" Foreground="White" IsActive="false" Style="{DynamicResource LoadingIndicatorWaveStyle}"/>								
			</StackPanel>															
		</StackPanel>										
		</Grid>
        <StackPanel 
			Orientation="Horizontal" 
			HorizontalAlignment="Right" 
			VerticalAlignment="Bottom"
			Margin="0,0,0,10">
				 
            <Button Name="Close" Width="45" Height="45" Margin="5,0,10,0" ToolTip="Exit" Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}">
            Exit
            </Button>
        </StackPanel>
        </Grid>                        
    </Grid>
</Border>
</Border>	
</Controls:MetroWindow>


